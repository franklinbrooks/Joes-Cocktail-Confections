<!DOCTYPE html>
<html>
  <% include ../partials/head.ejs %>
<body>
  <% include ../partials/header.ejs %>
    <main>
      <div class="container">
          <h1> <%= title %> </h1>
        <form action="/auth/login" method="post">
          <div>
            <label>Username:</label>
              <input type="text" name="username" maxlength="12" placeholder="Username"
              required/>
              <%# pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{1,12}$" %>
          </div>
          <div>
            <label>Password:</label>
              <input type="password" name="password" maxlength="12" placeholder="Password"
               required/>
               <%# pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"%>
           </div>
          <div>
            <button class="waves-light btn-large blue" type="submit">Log In</button>
          </div>
          <br>
          <br>
        </form>
      </div>
    </main>

    <% include ../partials/footer.ejs %>
</body>
</html>
