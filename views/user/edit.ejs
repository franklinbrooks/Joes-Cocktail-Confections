<html>
  <% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <main>
      <div class="container">
        <h1> <%= title %> </h1>
        <label>Edit your account</label>
        <br>
        <br>
        <form action="/auth/register" method="post" autocomplete="on">
          <div>
            <label>Username: (Max 12 characters)</label>
            <input type="text" name="user_name" maxlength="12" value="" required
              />
          </div>
          <div>
            <label>Password: (8-12 characters)</label>
            <input type="password" name="password" maxlength="12" value=""
             required/>
          </div>
          <div>
            <label>First Name:</label>
            <input type="text" name="first_name" maxlength="12" value="" required/>
          </div>
          <div>
            <label>Last Name:</label>
            <input type="text" name="last_name" maxlength="12" value="" required/>
          </div>
          <div>
            <label>Email:</label>
            <input type="email" name="email" value="" required/>
          </div>
          <div>
            <label>Telephone: (format: XXXXXXXXXX)</label>
            <input type="tel" name="cell_number" value=""
            required/>
          </div>
          <div>
            <label>Date of Birth:</label>
            <input type="date" name="dob" value="" required/>
          </div>
          <div>
            <input type="submit" value="Update account"/>
          </div>
        </form>
      </div>
    </main>
    <% include ../partials/footer.ejs %>
  </body>
</html>
